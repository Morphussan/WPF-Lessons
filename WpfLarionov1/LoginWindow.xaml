<Window x:Class="WpfLarionov1.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="259" Width="259">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Авторизация" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" Width="128"/>
            <TextBox Name="UsernameTextBox" Width="200" Height="30" Margin="0,0,0,10" ToolTip="Enter username"/>
            <PasswordBox Name="PasswordBox" Width="200" Height="30" Margin="0,0,0,10" ToolTip="Enter password"/>
            <Button Name="LoginButton" Width="200" Height="30" Margin="0,0,0,20" Click="LoginButton_Click">Login</Button>
        </StackPanel>
    </Grid>
</Window>