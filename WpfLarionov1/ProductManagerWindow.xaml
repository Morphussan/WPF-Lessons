<Window x:Class="WpfLarionov1.ProductManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Product Manager" Height="400" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Добавление продуктов" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" Width="232"/>
            <TextBox Name="NameTextBox" Width="200" Height="30" Margin="0,0,0,10" ToolTip="Enter product name"/>
            <TextBox Name="PriceTextBox" Width="200" Height="30" Margin="0,0,0,10" ToolTip="Enter product price"/>
            <Button Name="AddProductButton" Width="200" Height="30" Margin="0,0,0,20" Click="AddProductButton_Click">Add Product</Button>

            <ListBox Name="ProductListBox" Height="200" />
        </StackPanel>
    </Grid>
</Window>